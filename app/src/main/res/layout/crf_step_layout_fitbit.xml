<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/crf_root_instruction_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/crf_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:paddingTop="?attr/actionBarSize"
        android:layout_above="@+id/crf_text_container"
        android:scaleType="centerInside"/>

    <TextView
        style="@style/TextAppearance.Crf.Header"
        android:id="@+id/crf_intruction_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black54"
        android:paddingTop="?attr/actionBarSize"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:id="@id/crf_text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/crf_next_button_container">

        <TextView
            style="@style/TextAppearance.Crf.SubHeader"
            android:id="@+id/crf_intruction_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black54"
            android:textColorLink="?attr/colorAccent"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/rsb_padding_large"/>

        <TextView
            style="@style/TextAppearance.Crf.Body"
            android:id="@+id/crf_instruction_more_detail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black54"
            android:textColorLink="?attr/colorAccent"
            android:layout_marginLeft="@dimen/rsb_padding_large"
            android:layout_marginRight="@dimen/rsb_padding_large"/>

    </LinearLayout>

    <FrameLayout
        android:id="@id/crf_next_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <ImageButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/cr_instruction_custom_button"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:visibility="gone"
                android:layout_marginTop="@dimen/rsb_padding_small"/>

            <TextView
                style="@style/TextAppearance.Crf.InstructionCustomButtonText"
                android:id="@+id/crf_instruction_custom_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black37"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/rsb_padding_small"/>

        </LinearLayout>

        <Button
            style="@style/Crf.Salmon.RoundedCornerMaterialButton"
            android:id="@id/button_go_forward"
            android:layout_width="match_parent"
            android:layout_height="@dimen/crf_rounded_button_height"
            android:layout_margin="@dimen/rsb_padding_large"
            android:focusable="true"
            android:text="@string/crf_lets_go"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:onClick="goForwardClicked"/>

        <org.researchstack.backbone.ui.views.SubmitBar
            android:id="@+id/rsb_submit_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />

    </FrameLayout>

</RelativeLayout>