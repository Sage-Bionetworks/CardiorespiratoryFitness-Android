<!-- Change to LinearLayout for preview to work -->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@color/whiteThree"
    android:minHeight="@dimen/rsb_item_size_submit_bar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/bar_submit_negative"
            style="@style/Crf.Salmon.RoundedCornerMaterialButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:layout_marginBottom="4dp"
            tools:text="EXIT" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/bar_submit_postitive"
            style="@style/Crf.Salmon.RoundedCornerMaterialButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="16dp"
            tools:text="Submit" />

    </LinearLayout>

    <TextView
        android:id="@+id/bar_submit_skip"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/rsb_padding_medium"
        android:text="@string/crf_underlined_pause"
        android:textAllCaps="false"
        android:textColor="@color/azure"
        android:layout_gravity="center_horizontal"
        android:layout_margin="0dp"
        android:paddingTop="0dp"
        android:visibility="visible"/>
</merge>